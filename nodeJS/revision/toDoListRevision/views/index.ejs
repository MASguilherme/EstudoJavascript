<%- include("header") -%>
<div class="container">
  <div class="box box-title">
    <h1 class="title"><%= listTitle %></h1>
  </div>

  <div class="box">
    <div class="item">
      <% for(let i = 0; i < newItems.length;i++){ %>
      <input type="checkbox" />  
      <p><%= newItems[i] %></p>
      <% } %>
    </div>

    <form class="form-new-item item" method="post" action="/">
      <input
        type="text"
        name="newItems"
        id=""
        class="input-new-item"
        placeholder="Add New Item"
        autocomplete="off"
      />
      <button type="submit" name="list" class="btn-send">+</button>
    </form>
  </div>

  <%- include("footer") -%>
</div>
